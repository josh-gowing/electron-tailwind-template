{
  "name": "electron-tailwind-template",
  "version": "1.0.0",
  "description": "A minimal Electron + TailwindCSS application",
  "main": "./src/main.js",
  "scripts": {
    "dev": "concurrently -n electron,tailwind -c green,cyan \"electron .\" \"npx @tailwindcss/cli -i ./src/input.css -o ./src/styles.css --watch\""
  },
  "keywords": [
    "Electron",
    "Tailwind",
    "template",
    "boilerplate",
    "demo"
  ],
  "author": "G.H Design",
  "license": "CC0-1.0",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^36.2.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "tailwindcss": "^4.1.4"
  }
}
